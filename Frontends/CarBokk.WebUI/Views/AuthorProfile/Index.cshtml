@model ResultAuthorDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AuthorIndex.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog Güncelleme Paneli</h4>
                        <p class="card-subtitle mb-4">Blog güncellme işlemini panelden yapabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="AuthorID" />
                            <div class="form-group">
                               <label for="exampleInputName">Kullanıcı Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Username" placeholder="Yazar Adını Giriniz" disabled>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Ad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Yazar Adını Giriniz" disabled>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Soyadı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Surname" placeholder="Yazar Adını Giriniz" disabled>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Ad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Description" placeholder="Yazar Adını Giriniz" disabled>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Email</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Email" placeholder="Açıklamayı Giriniz" disabled>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl"> Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Yazar Görsel URL Bilgisini Giriniz" disabled>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl"> Şifre</label>
                                <input type="text"  class="form-control" id="exampleInputImageUrl" asp-for="Password" placeholder="Yazar Görsel URL Bilgisini Giriniz" disabled>
                            </div>
                            <a href="/AuthorProfile/Update/@Model.AuthorID" class="btn btn-primary waves-effect waves-light"> Bilgilerinizi Güncellemek için basınız </a>
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>